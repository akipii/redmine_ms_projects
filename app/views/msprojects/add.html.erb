<%= l(:msp_read_message, @added_tasks.size) %> 

<div style="clear: both;"/>
<br/>
<br/>
<br/>
<table class="list">
  <tr>
  <th><%= l :title %></th>
  <th><%= l :start_date %></th>
  <th><%= l :finish_date %></th>
  <th><%= l :create_date %></th>
  </tr>
  <% @added_tasks.each_with_index do |task, i| %>
  <tr>
  <td><%= link_to task.subject, {:controller => 'issues', :action => 'show', :id => task.id} %></td>
  <td><%= task.start_date %></td>
  <td><%= task.due_date %></td>
  <td><%= task.created_on %></td>
  </tr>
  <% end %>
</table>


